<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card" style="width: 18rem;">
                <a href="/courses/{{this.slug}}">
                    <img class="card-img-top" src="img/{{this.img}}" alt="Card image cap">
                </a>
                
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">Giá bán: {{this.gia}} đ</p>
                    <a href="#" class="btn btn-primary">Mua</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>